<?php

declare(strict_types=1);

require __DIR__ . '/vendor/autoload.php';

use Bolt\Bolt\CLI\BoltCLI;
use Bolt\Bolt\CLI\Strike\ModelCommand;
use Bolt\Bolt\CLI\Strike\ViewCommand;

$strike = new BoltCLI();

$strike->registerCommand("model", "Create a model and associated files", ModelCommand::class);
$strike->registerCommand("view", "Create a View and associated files", ViewCommand::class);


$strike->run();